<script>
        
    let currentEmail = '';
    
    async function enviarCodigo() {
        const email = document.getElementById('email').value;
        currentEmail = email;
        
        document.getElementById('gif_login').style.display = 'block';
        document.getElementById('step1').style.display = 'none';
        
        const response = await fetch('/user/send-code', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ email })
        });
        
        if (response.ok) {
            
            document.getElementById('step2').style.display = 'block';
            document.getElementById('gif_login').style.display = 'none';
            document.getElementById('specification').textContent = 'El código fue enviado a ' + email;
        } else {
            document.getElementById('message').textContent = 'Error enviando código';
        }
    }

